extends layout 

block page 
    - let menu = "post"

block content 
    h2 Post An Article 
    div= error 
    .col-md-8 
        form(action="/post", method="POST", role="form")
            .form-group     
                lablel(for="title") Title
                input#title.form-control(name="title", type="text", placeholder="What is Node.js")
            .form-group     
                lablel(for="slug") Slug
                input#slug.form-control(name="slug", type="text", placeholder="what-is-node")
                span.help-block This string will be used in the URL.
            .form-group 
                label(for="body") Body 
                textarea#body.form-control(name="body", cols="30", rows="10", placeholder="Article Body")
            p 
                button.btn.btn-primary(type="submit") Save